{
    "name": "challenge",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint"
        //"resume_state": "I33000_E43"
        //"resume_state": "experiments/challenge_231116_183518/checkpoint/I5800_E7" //pretrain model or training state
    },
    "datasets": {
        "train": {
            "name": "ChallengeTrain",
            "mode": "HR", // whether need LR img
            //"dataroot": "dataset/testing-challenge_16_128/train",
            "dataroot": "dataset-final/slices-dataset/train",
            "datatype": "img", //lmdb or img, path of img files
            "l_resolution": 16, // low resolution need to super_resolution
            "r_resolution": 128, // high resolution
            "batch_size": 4,
            "num_workers": 16,
            "use_shuffle": true,
            "data_len": -1 // -1 represents all data used in train
        },
        "val": {
            "name": "ChallengeValidate",
            "mode": "HR",
            //"dataroot": "dataset/testing-challenge_16_128/validate",
            "dataroot": "dataset-final/slices-dataset/validate",
            "datatype": "img", //lmdb or img, path of img files
            "l_resolution": 16,
            "r_resolution": 128,
            "data_len": 5 // data length in validation 
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 2,
            "out_channel": 1,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.2
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 1000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 1000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 128,
            "channels": 1, //sample channel
            "conditional": true // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 100e3,
        "val_freq": 1e3,
        "save_checkpoint_freq": 2e3,
        "print_freq": 200,
        "optimizer": {
            "type": "adam",
            "lr": 1e-4
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "sr_ffhq"
    }
}